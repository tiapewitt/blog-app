<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
	<div class="panel-heading">
		<h2><%= @blog_post.title %></h2>
	</div>
	<div class="panel-body">
		<p>by: <%= link_to @blog_post.user.username, user_posts_path(id: @blog_post.user.id) %></p>
		<p><%= @blog_post.blog_entry %></p>
		<p><%= @blog_post.created_at.strftime('%m/%d/%Y') %></p>
	<!-- <p><small><em>posted <%= time_ago_in_words(@blog_post.created_at) %> ago</em></small></p> -->
	</div>

</div>

<div class="panel panel-success">
	<div class="panel-heading">
		<h3>Leave Comment Here</h3>
	</div>

	<div class="panel-body">
		<%= render 'comments/form' %>
	</div>

	<div class="panel panel-default">
		<div class="panel-heading">
			<h4>Comments</h4>
		</div>
		<% @blog_post.comments.each do |comment| %>
		<div class="panel-body">
			<p><strong><%= comment.user.username, user_posts_path(id: comment.user.id) %></strong>
				said: </p>
				<p><%= comment.comment_entry %></p>
		</div>
		Posted: <%= time_ago_in_words(comment.created_at) %> ago
		<% end %>
	</div>
</div>


<%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
<%= link_to 'Back', blog_posts_path %>
